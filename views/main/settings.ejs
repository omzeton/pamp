<%- include('../includes/head.ejs') %>
</head>
<body>

    <h2 class="heading center">Upload</h2>

    <form class="form" action="/settings" method="POST" enctype="multipart/form-data">

        <div class="form-control">
            <label for="image">Change avatar</label>
            <input name="image" type="file" id="avatar">
        </div>

        <div class="form-control">
            <label for="username">Change username</label>
            <input name="username" type="text" id="username" value="<%= oldInput.username %>">
        </div>

        <div class="form-control">
            <a href="/password-change">Change your password</a>
        </div>
        
        <div class="form-control">
            <a href="/delete-user">Delete account</a>
        </div>

        <button class="form-btn" type="submit">Confirm settings</button>

    </form>

    <% if (errorMessage) { %>
        <div class="user-error-message">
            <%= errorMessage %>
        </div>
    <% } %>

    <%- include('../includes/navigation.ejs') %>
    
<%- include('../includes/end.ejs') %>