<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/home.css">
</head>
<body>

    <div class="home_container">
        <div class="home_left">
            <div class="user-avatar" style="background-image: url(<%= user.avatar === '' ? '../img/setup-avatar.png' : user.avatar %>)"></div>
            <p>Username: <span><%= user.name %></span></p>
            <p>Registered since:<br><span> <%= user.registeredSince %></span></p>
            <p>Posted: <span> <%= user.filesUploaded %> </span></p>
            <a href="/settings">Settings</a>
        </div>
        <div class="home_right">
            <% if (posts.length > 0) { %>
                <% for (let p of posts) { %>
                    <div class="post">
                        <div class="post__top">
                            <div class="post__top--left post__avatar" style="background-image: url(<%= p.avatarUrl === '' ? '../img/setup-avatar.png' : p.avatarUrl %>)"></div>
                            <div class="post__top--right">
                                <p><%= p.username %></p>
                                <p><%= p.uploadDate %></p>
                            </div>
                        </div>
                        <div class="post__body">
                            <% if (p.imageUrl) { %>
                                <p><%= p.description %></p>
                                <div class="post__body--img__container">
                                    <img src="/<%= p.imageUrl %>" alt="p.title">
                                </div>
                            <% } else { %>
                                <p><%= p.description %></p>
                            <% } %>
                        </div>
                        <div class="post__footer">
                            <form action="/like" method="post">
                                <button type="submit" class="like">Like (0)</button>
                            </form>
                            <form action="/share" method="post">
                                <button type="submit" class="share">Share</button>
                            </form>
                            <% if (isAuthenticated) { %>
                                <form action="/delete" method="post">
                                    <button type="submit" class="delete">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <h2 class="center no-posts">No posts found!</h2>
            <% } %>
        </div>
    </div>

    <%- include('../includes/navigation.ejs') %>
    
<%- include('../includes/end.ejs') %>